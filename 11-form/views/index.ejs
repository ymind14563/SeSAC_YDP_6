    <!-- form validation -->
    <!-- 1. type(password, email, number) -->
    <!-- required, min(max)length, min(max) -->
    <h2> GET 방식으로 요청하는 폼</h2>
    <form action="/getForm" method="get">
        <input type="text" name = "id" placeholder="아이디 (최소 3글자, 필수 값)" minlength = "3" required>
        <input type="password" name = "pw" placeholder="패스워드(최소 4글자, 필수 값)" minlength = "4" required>

        <br>
        <!-- 메일, 학년 input 추가 -->
        <input type="email" name = "email" placeholder="이메일(필수 값)" required>
        <input type="number" name = "grade" placeholder="학년(1 ~ 4 숫자만 가능)" min = "1" max = "4">

        <button type="submit">GET 방식으로 폼 제출</button>
    </form>

    <!-- 2. pattern (정규표현식 ^([a-zA-Z0-9가-힣]{4,})$) -->
    <!-- title -->
    <h2> POST 방식으로 요청하는 폼</h2>
    <form action="/postForm" method="post">
        <input type="text" name = "id" placeholder="아이디" 
        pattern="^([a-zA-Z0-9가-힣]{4, })$" title="대소문자, 한글, 숫자, 4글자 이상" required>

        <input type="password" name = "pw" placeholder="패스워드" 
        pattern="^([a-z0-9]{8, 12})$" title="소문자, 숫자, 8글자 이상 12글자 이하" required>

        <button type="submit">POST 방식으로 폼 제출</button>
    </form>
</body>
